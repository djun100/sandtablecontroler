<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <!-- start baidu-map -->
    <style name="CommonListItemTitleText">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>
     <style name="CommonListItemInfoText">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff737373</item>
    </style>
    <style name="CommonTopBarRightText">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="CommonTopBarMiddleText">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="CommonReportEditText">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="CommonReportLeftText">
        <item name="android:gravity">center</item>
        <item name="android:width">100dip</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="CommonTopBarHomeText">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="CommonText">
        <item name="android:textSize">@dimen/text_size_one</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TitleText.Orange">
		<item name="android:textColor">@color/orange</item>        
    </style>
    
    <style name="CommonText.ListViewText">
        <item name="android:textSize">@dimen/text_size_one</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:padding">@dimen/comman_listitem_text_padding</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CommonText.ListViewText.Clickable">
        <item name="android:background">@drawable/control_button_bg</item>
    </style>
    
    <style name="CommonText.ListViewText.Clickable.Small">
        <item name="android:textSize">@dimen/text_size_two</item>
    </style>
    
    <style name="CommonText.ListViewText.Black">
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="NavigationText">
        <item name="android:textSize">@dimen/text_size_one</item>
        <item name="android:textColor">@color/navigation_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/common_topbar_home_selector</item>
    </style>
    <style name="CommonText.Orange">
        <item name="android:textColor">@color/orange</item>
    </style>
	
    
    <style name="CommonText.White">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ToastText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_two</item>
    </style>
    
    <style name="DialogButton">
        <item name="android:textSize">@dimen/text_size_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:background">@drawable/dialogbutton_bg</item>
    </style>
    
	<style name="SDL.Dialog" parent="android:Theme">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowActionModeOverlay">true</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:backgroundDimAmount">0.6</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
	</style>
	
</resources>